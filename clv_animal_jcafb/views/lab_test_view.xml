<odoo>
        
    <record id="clv_animal_view_form_lab_test_request" model="ir.ui.view">
        <field name="name">clv.animal.form</field>
        <field name="model">clv.animal</field>
        <field name="inherit_id" ref="clv_animal.clv_animal_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <page name="settings" position="before">
                <page string="Lab Test Requests">
                    <group>
                        <field name="count_lab_test_requests"/>
                    </group>
                    <field name="lab_test_request_ids" colspan="4" nolabel="1"/>
                </page>
            </page>
        </field>
    </record>

