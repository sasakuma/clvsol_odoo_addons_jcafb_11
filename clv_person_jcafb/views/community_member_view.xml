<odoo>
        
    <record id="clv_person_view_form_community_member" model="ir.ui.view">
        <field name="name">clv.person.form</field>
        <field name="model">clv.person</field>
        <field name="inherit_id" ref="clv_person.clv_person_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <page name="settings" position="before">
                <page string="Communities">
                    <group>
                        <field name="count_communities"/>
                    </group>
                    <field name="community_member_ids" colspan="4" nolabel="1"/>
                </page>
            </page>
        </field>
    </record>

    <record id="clv_person_view_tree_community_member" model="ir.ui.view">
        <field name="name">clv.person.tree</field>
        <field name="model">clv.person</field>
        <field name="inherit_id" ref="clv_person.clv_person_view_tree"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="email" position="before">
                <field name="count_communities"/>
            </field>
        </field>
    </record>

</odoo>
