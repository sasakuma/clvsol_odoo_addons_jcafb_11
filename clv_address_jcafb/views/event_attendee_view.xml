<odoo>
        
    <record id="clv_address_view_form_event_attendee" model="ir.ui.view">
        <field name="name">clv.address.form</field>
        <field name="model">clv.address</field>
        <field name="inherit_id" ref="clv_address.clv_address_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <page name="settings" position="before">
                <page string="Events">
                    <group>
                        <field name="count_events"/>
                    </group>
                    <field name="event_attendee_ids" colspan="4" nolabel="1"/>
                </page>
            </page>
        </field>
    </record>

    <record id="clv_address_view_tree_event_attendee" model="ir.ui.view">
        <field name="name">clv.address.tree</field>
        <field name="model">clv.address</field>
        <field name="inherit_id" ref="clv_address.clv_address_view_tree"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="email" position="before">
                <field name="count_events"/>
            </field>
        </field>
    </record>

</odoo>
